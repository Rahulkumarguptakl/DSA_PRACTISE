#include<iostream>
using namespace std;
int main(){
    int row,col,space;
    int n=5;
    for(row=0;row<n;row++){
        for(space=0;space<row;space++){
            cout<<" ";
        }
        for(col=0;col<2*(n-row);col++){
            cout<<"*";
        }
        cout<<" " <<endl;
    }
    for(row=1;row<n;row++){
        for(space=0;space<n-row-1+1;space++){
            cout<<" ";
        }
        for(col=0;col<2*row+1;col++){
            cout<<"*";
        }
        cout<<endl;
    }

    return 0;
}
